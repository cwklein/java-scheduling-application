<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="441.0" prefWidth="833.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="klein.view_controllers.AppointmentsPage">
    <children>
        <TableView fx:id="appointmentTableView"  onMouseClicked="#selectAppointment" layoutX="8.0" layoutY="70.0" prefHeight="311.0" prefWidth="812.0">
            <columns>
                <TableColumn fx:id="appointmentIDColumn" prefWidth="53.0" text="Appt ID" />
                <TableColumn fx:id="titleColumn" prefWidth="49.333335876464844" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="94.00001525878906" text="Description" />
                <TableColumn fx:id="locationColumn" minWidth="3.0" prefWidth="98.33334350585938" text="Location" />
                <TableColumn fx:id="typeColumn" prefWidth="78.0" text="Type" />
                <TableColumn fx:id="startTimeColumn" prefWidth="148.0" text="Start Date &amp; Time" />
                <TableColumn fx:id="endTimeColumn" prefWidth="141.0" text="End Date &amp; Time" />
                <TableColumn fx:id="customerIDColumn" prefWidth="75.0" text="Customer ID" />
                <TableColumn fx:id="userIDColumn" prefWidth="72.0" text="User ID" />
            </columns>
        </TableView>
        <Label layoutX="85.0" layoutY="21.0" text="Appointments" underline="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Button fx:id="exitButton" layoutX="785.0" layoutY="391.0" mnemonicParsing="false" onAction="#closeApplication" text="Exit" />
        <Button fx:id="reportButton" layoutX="723.0" layoutY="391.0" mnemonicParsing="false" onAction="#toReports" text="Reports" />
        <RadioButton fx:id="weeklyButton" layoutX="367.0" layoutY="30.0" mnemonicParsing="false" onAction="#toWeeklyView" text="Weekly View" toggleGroup="$viewScope">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
            <toggleGroup>
                <ToggleGroup fx:id="viewScope" />
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="monthlyButton" layoutX="485.0" layoutY="30.0" mnemonicParsing="false" onAction="#toMonthlyView" text="Monthly View" toggleGroup="$viewScope">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </RadioButton>
        <Button fx:id="addButton" layoutX="376.0" layoutY="391.0" mnemonicParsing="false" onAction="#toAddAppointment" text="Add" />
        <Button fx:id="modifyButton" layoutX="422.0" layoutY="391.0" mnemonicParsing="false" onAction="#toModifyAppointment" text="Modify" />
        <Button fx:id="deleteButton" layoutX="484.0" layoutY="391.0" mnemonicParsing="false" onAction="#deleteAppointment" text="Delete" />
        <Button layoutX="8.0" layoutY="391.0" mnemonicParsing="false" onAction="#toCustomers" text="View Customer List" />
        <RadioButton fx:id="toViewAllButton" layoutX="279.0" layoutY="30.0" mnemonicParsing="false" onAction="#toViewAll" selected="true" text="View All" toggleGroup="$viewScope">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </RadioButton>
        <TextField fx:id="searchBar" layoutX="607.0" layoutY="26.0" onAction="#searchAppointments" prefHeight="25.0" prefWidth="212.0" promptText="Search by Title, Description, Layout or Type">
            <font>
                <Font size="10.0" />
            </font></TextField>
    </children>
</AnchorPane>
