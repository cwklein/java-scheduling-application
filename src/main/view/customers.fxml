<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="441.0" prefWidth="833.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.view_controllers.CustomersPage">
    <children>
        <TableView fx:id="custTableView" onMouseClicked="#selectCustomer" layoutX="8.0" layoutY="70.0" prefHeight="311.0" prefWidth="812.0">
            <columns>
                <TableColumn fx:id="custIDColumn" prefWidth="78.0" text="Customer ID" />
                <TableColumn fx:id="custNameColumn" prefWidth="101.0" text="Customer Name" />
                <TableColumn fx:id="custAddressColumn" prefWidth="93.0" text="Address" />
                <TableColumn fx:id="custPostalCodeColumn" minWidth="3.0" prefWidth="73.0" text="Postal Code" />
                <TableColumn fx:id="custPhoneColumn" prefWidth="66.0" text="Phone" />
                <TableColumn fx:id="custDateCreatedColumn" prefWidth="86.0" text="Date Created" />
                <TableColumn fx:id="custCreatedByColumn" prefWidth="72.0" text="Created By" />
                <TableColumn fx:id="custDateUpdatedColumn" prefWidth="89.0" text="Date Updated" />
                <TableColumn fx:id="custUpdatedByColumn" prefWidth="78.0" text="Updated By" />
                <TableColumn fx:id="custDivisionIDColumn" prefWidth="71.0" text="Division ID" />
            </columns>
        </TableView>
        <Label layoutX="85.0" layoutY="21.0" text="Customers" underline="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Button fx:id="exitButton" layoutX="785.0" layoutY="391.0" mnemonicParsing="false" onAction="#closeApplication" text="Exit" />
        <Button fx:id="reportButton" layoutX="723.0" layoutY="391.0" mnemonicParsing="false" onAction="#toReports" text="Reports" />
        <Button fx:id="addButton" layoutX="376.0" layoutY="391.0" mnemonicParsing="false" onAction="#toAddCustomer" text="Add" />
        <Button fx:id="modifyButton" layoutX="422.0" layoutY="391.0" mnemonicParsing="false" onAction="#toModifyCustomer" text="Modify" />
        <Button fx:id="deleteButton" layoutX="484.0" layoutY="391.0" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete" />
        <Button layoutX="8.0" layoutY="391.0" mnemonicParsing="false" onAction="#toAppointments" text="View Appointments" />
        <TextField fx:id="customerIdentifier" layoutX="506.0" layoutY="26.0" onAction="#searchCustomers" prefHeight="25.0" prefWidth="224.0" promptText="Search for Customer by ID or Name" />
    </children>
</AnchorPane>
